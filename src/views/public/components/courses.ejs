<!-- ======= Courses Section ======= -->
<section id="cursos" class="services">
    <div class="container" data-aos="fade-up">

      <header class="section-header">
        <h3>Nossos Cursos</h3>
        <p>Conheça abaixo os cursos lecionados no nosso Instituto.</p>
      </header>

      <% if (cursos.length > 0) { %>
        <div class="row">
          <div class="col-lg-12">
            <div class="glide" id="glide_02">
              <div class="glide__track" data-glide-el="track">
                <ul class="glide__slides">
  
                  <% cursos.forEach(curso => { %>
                    <li class="glide__slide">
                      <div class="item">
                        <img src="/files/<%= curso.dataValues.foto %>" alt="<%= curso.dataValues.nome %>">
                        <div class="down-content">
                          <h4>
                            <%= curso.dataValues.nome %>
                          </h4>

                          <% if (curso.dataValues.classes.length > 0) { %>
                            <div class="col-12 classes">
                                <% curso.dataValues.classes.forEach(classe => { %>
                                  <div class="d-flex classe">
                                    <div class="col-6 label mr-5" title="Classe"><%= classe.dataValues.nivel %>ª classe:</div>
                                    <div class="col-6" title="Valor da propina"><%= classe.dataValues.preco %>,00kz</div>
                                  </div>
                                <% }) %>
                            </div>
                          <% } %>

                          <div class="info">
                            <div class="row">
                      
                              <div class="col-8">
                                <ul>
                                  <li><i class="bi-star-fill"></i></li>
                                  <li><i class="bi-star-fill"></i></li>
                                  <li><i class="bi-star-fill"></i></li>
                                  <li><i class="bi-star-fill"></i></li>
                                  <li><i class="bi-star-fill"></i></li>
                                </ul>
                              </div>
                              
                            </div>
                          </div>
                        </div>
                      </div>
                    </li>
                  <% }); %>
  
                </ul>
              </div>
  
              <div class="glide__arrows" data-glide-el="controls">
                <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
                  
                  <i class="bi bi-arrow-left" aria-hidden="true"></i>
                </button>
                <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
                  
                  <i class="bi bi-arrow-right" aria-hidden="true"></i>
                </button>
              </div>
            </div>
            <!--<div class="owl-courses-item owl-carousel"></div>-->
          </div>
        </div>  
      <% } %>

    </div>
  </section><!-- End Courses Section -->